<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivFoto"
            android:layout_width="match_parent"
            android:layout_height="353dp"
            android:src="@drawable/policia" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:columnCount="3">

            <ImageView
                android:id="@+id/ivCalificar"
                android:layout_width="@dimen/medida_icon_width"
                android:layout_height="@dimen/medida_icon_height"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:src="@drawable/hueso_blanco" />

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="@dimen/medida_nombre"
                android:layout_height="51dp"
                android:layout_columnWeight="1"
                android:textSize="@dimen/medida_letra"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCalificacion"
                android:layout_width="@dimen/medida_icon_calificacion"
                android:layout_columnWeight="1"
                android:drawableRight="@drawable/hueso_color"
                android:textSize="@dimen/medida_letra"
                android:textStyle="bold" />

        </GridLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>